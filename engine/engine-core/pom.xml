    <modelVersion>4.0.0</modelVersion>
    <artifactId>engine-core</artifactId>
    <packaging>jar</packaging>

    <description>
        The engine loads and executes plugins and provides the basic services that plugins need.

        The Engine should NOT be aware of REST or HTTP.
    </description>

    <parent>
        <groupId>org.trustedanalytics.atk</groupId>
        <artifactId>TrustedAnalytics</artifactId>
        <relativePath>../../pom.xml</relativePath>
